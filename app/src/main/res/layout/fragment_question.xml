<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/semi_transparent"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/five_dp"
                app:cardElevation="@dimen/three_dp"
                app:cardMaxElevation="@dimen/three_dp"
                app:contentPadding="@dimen/five_dp">

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never">

                <LinearLayout
                        android:id="@+id/linBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <com.careapp.views.AppTextView
                            android:id="@+id/txtQuestion"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:padding="@dimen/ten_dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sixteen_sp"/>

                    <com.careapp.views.AppTextView
                            android:id="@+id/txtHint"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:padding="@dimen/ten_dp"
                            android:textColor="@color/colorBlack"
                            android:drawableStart="@drawable/ic_hint"
                            android:drawablePadding="@dimen/five_dp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/fourteen_sp"/>

                    <LinearLayout
                            android:id="@+id/linOptions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ten_dp"
                            android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</layout>
