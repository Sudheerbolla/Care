<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/twentyfive_dp"
            android:paddingEnd="@dimen/twentyfive_dp"
            android:orientation="vertical">

        <com.careapp.views.AppTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_launcher"
                app:txt_font_type="bold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sixteen_sp"
                android:padding="@dimen/five_dp"
                android:drawablePadding="@dimen/five_dp"
                android:text="@string/welcome_to_care"/>

        <com.careapp.views.AppTextView
                android:id="@+id/txtData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/eight_dp"
                android:clickable="false"
                android:longClickable="false"
                android:textIsSelectable="false"
                android:layout_marginTop="@dimen/fifteen_dp"
                android:textSize="@dimen/fifteen_sp"
                android:textColor="@color/colorBlack"
                android:text="Please wait while data is syncing in background."/>

    </LinearLayout>

</layout>
